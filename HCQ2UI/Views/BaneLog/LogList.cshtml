@{
    ViewBag.Title = "禁毒日志";
}
@section headerSection{
    <style>
        #exampleToolbar > .form-group {
            float: left;
            margin: 0;
            margin-left: 5px;
        }
    </style>
}
<div class="animated fadeInRight">
    <!-- Panel Other -->
    <div class="ibox float-e-margins" style="margin-bottom: 0px;">
        <div class="ibox-content" style="padding: 5px 20px 0px 20px;">
            <div class="row row-lg">
                <div class="col-sm-12 col-sm-leftRight">
                    <!-- Example Toolbar -->
                    <div class="example">
                        <div class="btn-group hidden-xs" id="exampleToolbar" role="group">
                            @{
                                List<string> folderList = (List<string>)ViewBag.elementList;
                                if (folderList.Contains("baneDetail"))
                                {
                                    <button id="baneDetail" type="button" class="btn btn-outline btn-primary">
                                        <i class="glyphicon glyphicon-th-large" aria-hidden="true">详细</i>
                                    </button>
                                }
                                if (folderList.Contains("btnSearch"))
                                {
                                    <div class="form-group" style="width:300px;">
                                        <input id="log_title" name="log_title" type="text" class="form-control" placeholder="请输入日志标题">
                                    </div>
                                    <div class="form-group" style="margin-top:-2px; width:180px;">
                                        <select id="logUser" name="logUser" title="请选择操作者" class="form-control show-tick selectpicker" data-live-search="true" placeholder="请选择操作者"></select>
                                    </div>
                                    <div class="form-group">
                                        <input id="log_date_start" name="log_date_start" type="text" class="laydate-icon form-control input-sm" placeholder="操作开始日期" title="操作开始日期" onclick="laydate({istime: true, format: 'YYYY-MM-DD'})" />
                                    </div>
                                    <div class="form-group">
                                        <input id="log_date_end" name="log_date_end" type="text" class="laydate-icon form-control input-sm" placeholder="操作结束日期" title="操作结束日期" onclick="laydate({istime: true, format: 'YYYY-MM-DD'})" />
                                    </div>
                                    <div class="form-group">
                                        <button id="btnSearch" class="btn btn-primary" type="button"><i class="fa fa-search"></i>&nbsp;查询</button>
                                    </div>
                                }
                            }
                        </div>
                        <table id="exampleTableToolbar" data-mobile-responsive="true" data-radio="true"></table>
                    </div>
                    <!-- End Example Toolbar -->
                </div>
            </div>
        </div>
    </div>
    <!-- End Panel Other -->
</div>
<!-- 添加/编辑 -->
<div id="baneForm" style="width: 430px; overflow: hidden; display: none;">
    <form class="form-horizontal m-t" id="baneFormTable" method="post">
        <div class="form-group">
            <label class="col-sm-4 control-label">操作者：</label>
            <div class="col-sm-7">
                <input id="user_name" name="user_name" type="text" class="form-control input-sm" disabled/>
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-4 control-label">日志类别：</label>
            <div class="col-sm-7">
                <input id="log_type" name="log_type" type="text" class="form-control input-sm" disabled/>
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-4 control-label">操作者IP地址：</label>
            <div class="col-sm-7">
                <input id="log_ip" name="log_ip" type="text" class="form-control input-sm" disabled />
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-4 control-label">标题：</label>
            <div class="col-sm-7">
                <input id="log_title" name="log_title" type="text" class="form-control input-sm" disabled />
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-4 control-label">操作日期：</label>
            <div class="col-sm-7">
                <input id="log_date" name="log_date" type="text" class="form-control input-sm" disabled />
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-4 control-label">内容：</label>
            <div class="col-sm-7">
                <textarea class="form-control" id="log_context" name="log_context" rows="3" disabled></textarea>
            </div>
        </div>
    </form>
</div>
@section footSection{
    <script src="~/Resources/myScript/BaneUser/baneLogManager.js"></script>
    <script>
        $(function () {
            baneLogManager.initPage();
        });
    </script>
}
