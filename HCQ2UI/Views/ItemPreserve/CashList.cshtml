@{
    ViewBag.Title = "缴纳金额管理";
}
@section headerSection{
    <style>
        .float-unit {
            height: 100%;
            border: 1px solid #E7EAEC;
            border-top-width: 0px;
            border-bottom-width: 0px;
            margin-bottom: 0px;
        }

        .left-sm-3 {
            padding-left: 0px;
        }

        .right-sm-9 {
            padding-right: 0px;
        }

        .ibox-unit {
            overflow-y: auto;
            height: 89%;
            padding: 0px;
        }

        #exampleToolbar div {
            margin-bottom: 0px;
        }

        #exampleToolbar > .form-group {
            float: left;
            margin: 0;
            margin-right: 5px;
            margin-top: 1px;
        }

        .form-group > button {
            margin-top: -2px;
            margin-bottom: 2px;
        }
        .number-money {
            padding-top: 0;
            padding-bottom: 0;
        }
    </style>
}
<div class="wrapper animated fadeInRight autoHeight">
    <!-- Panel Other -->
    <div class="row autoHeight" style="background-color: #fff;">
        <div class="col-sm-12 col-sm-leftRight">
            <!-- Example Toolbar -->
            <div class="example">
                <div class="btn-group hidden-xs" id="exampleToolbar" role="group">
                    <button id="cashAdd" type="button" class="btn btn-outline btn-primary">
                        <i class="glyphicon glyphicon-plus" aria-hidden="true">添加</i>
                    </button>
                    <button id="cashEdit" type="button" class="btn btn-outline btn-primary">
                        <i class="glyphicon glyphicon-pencil" aria-hidden="true">编辑</i>
                    </button>
                    <button id="cashDel" type="button" class="btn btn-outline btn-danger">
                        <i class="glyphicon glyphicon-trash" aria-hidden="true">删除</i>
                    </button>
                </div>
                <table id="cashTableToolbar" data-mobile-responsive="true" data-radio="true"></table>
                </div>
            <!-- End Example Toolbar -->
        </div>
    </div>
    <!-- End Panel Other -->
</div>
<!-- 添加/编辑 -->
<div id="cashForm" style="width: 460px; overflow: hidden; display: none;">
    <form class="form-horizontal m-t" id="cashFormTable" method="post">
        <div class="form-group">
            <label class="col-sm-3 control-label">开始时间<span class="glyphicon glyphicon-asterisk requiredtitle"></span>：</label>
            <div class="col-sm-7">
                <input id="cash_start_date" name="cash_start_date" type="text" class="laydate-icon form-control input-sm" placeholder="请输入开始时间" title="请输入开始时间" required="" aria-required="true" onclick="laydate({istime: true, format: 'YYYY-MM-DD'})" />
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-3 control-label">结束时间<span class="glyphicon glyphicon-asterisk requiredtitle"></span>：</label>
            <div class="col-sm-7">
                <input id="cash_end_date" name="cash_end_date" type="text" class="laydate-icon form-control input-sm" placeholder="请输入结束时间" title="请输入结束时间" required="" aria-required="true" onclick="laydate({istime: true, format: 'YYYY-MM-DD'})" />
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-3 control-label">缴纳金额<span class="glyphicon glyphicon-asterisk requiredtitle"></span>：</label>
            <div class="col-sm-7">
                <input id="cash_money" name="cash_money" type="number" class="form-control input-sm number-money" placeholder="请输入缴纳金额" title="请输入缴纳金额" required="" aria-required="true" />
                <input type="hidden" id="ip_id" name="ip_id" value=""/>
            </div>
        </div>
    </form>
</div>
@section footSection{
    <script src="~/Resources/tools/treeview-search-custom.js"></script>
    <script src="~/Resources/myScript/AfterSaleManager/ItemPreserveManager.js"></script>
    <script>
        $(function () {
            //初始化Page
            cashMoneyManager.initPage();
        });
    </script>
}




