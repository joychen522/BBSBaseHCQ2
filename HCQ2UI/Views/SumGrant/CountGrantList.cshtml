@{
    ViewBag.Title = "汇总统计";
}
@section headerSection{
<style>
    .float-unit {
        height: 100%;
        border: 1px solid #E7EAEC;
        border-top-width: 0px;
        border-bottom-width: 0px;
        margin-bottom: 0px;
    }

    .left-sm-3 {
        padding-left: 0px;
    }

    .right-sm-9 {
        padding-right: 0px;
    }

    .ibox-unit {
        overflow-y: auto;
        height: 89%;
        padding: 0px;
    }

    #exampleToolbar div {
        margin-bottom: 0px;
    }

    #exampleToolbar > .form-group {
        float: left;
        margin: 0;
        margin-right: 5px;
        margin-top: 1px;
    }
    .form-group>button {
        margin-top: -2px;
        margin-bottom: 2px;
    }
</style>
}
<div class="wrapper animated fadeInRight autoHeight">
    <div class="row autoHeight" style="background-color: #fff;">
        <!--选择单位-->
        <div id="tree"></div>
        <!--生成按钮-->
        <div class="col-sm-10 right-sm-9" style="padding-left: 5px;">
            <div class="example">
                <div class="btn-group hidden-xs" id="exampleToolbar" role="group">
                    @{
                        List<string> folderList = (List<string>)ViewBag.elementList;
                        if (folderList.Contains("btnSearch"))
                        {
                            <div class="form-group">
                                <input id="dateStart" name="dateStart" type="text" class="form-control laydate-icon" placeholder="请输入开始时间">
                            </div>
                            <div class="form-group">
                                <input id="dateEnd" name="dateEnd" type="text" class="form-control laydate-icon" placeholder="请输入截止时间">
                            </div>
                            <div class="form-group">
                                <button id="btnSearch" class="btn btn-primary" type="button"><i class="fa fa-search"></i>&nbsp;查询</button>
                            </div>
                        }
                        if (folderList.Contains("btnCreateChart"))
                        {
                            <div class="form-group">
                                <button id="btnCreateChart" class="btn btn-primary" type="button"><i class="fa fa-search"></i>&nbsp;生成图表</button>
                            </div>
                        }
                    }
                </div>
                <table id="countGrantTableToolbar" data-mobile-responsive="true" data-radio="true"></table>
            </div>
        </div>
    </div>
</div>
<!--生成图表-->
<div id="chart_form" style="width: 850px; overflow: hidden; display: none; margin-left: 60px; margin-top: 20px;">
    <div id="echarts-Timebar-chart" style="width: 100%; height: 400px; margin-top: 5px;"></div>
</div>
@section footSection{
    <script src="~/Resources/mainFrame/js/echarts.min3.3.1.js"></script>
    <script src="~/Resources/mainFrame/js/macarons.js"></script>
    <script src="~/Resources/mainFrame/js/plugins/treeview/bootstrap-treeview-1.2.0.js"></script>
    <script src="~/Resources/tools/treeview-search-custom.js"></script>
    <script src="~/Resources/myScript/finance/sumGrantManager.js"></script>
    <script>
        $(function () {
            //加载单位
            chartGrantManager.initPage();
        });
    </script>
}
