@model HCQ2_Model.T_PageFolder
@{
    ViewBag.Title = "菜单管理";
}
@section headerSection{
<link href="~/Resources/mainFrame/css/plugins/gtreetable/default/jquery.treeTable.css" rel="stylesheet" />
<link href="~/Resources/mainFrame/css/plugins/awesome-bootstrap-checkbox/awesome-bootstrap-checkbox.css" rel="stylesheet" />
}
<div class="animated fadeInRight">
    <div class="col-xl-12">
        <div class="ibox">
            <div class="ibox-title" style="height:50px;">
                <h5><i class="fa fa-qrcode"></i>&nbsp;菜单资源列表</h5>
                <div class="btn-group hidden-xs" role="group" style="margin-left:10px;margin-top:-7px;">
                    <div class="form-group" style="display:inline-block; width:200px;">
                        <select id="smCode" name="smCode" title="请选择所属模块" class="form-control show-tick selectpicker" placeholder="请选择所属模块"></select>
                    </div>
                    <div class="form-group" style="display:inline-block;">
                        <button id="btnSearch" class="btn btn-primary" type="button"><i class="fa fa-search"></i>&nbsp;查询</button>
                    </div>
                </div>
            </div>
            <div id="treeContent" class="ibox-content" style="padding:0">
                <table id="treeTable" class="table table-striped table-bordered table-hover table-condensed" style="font-size: 13px"></table>
            </div>
        </div>
    </div>
</div>
<!--添加,编辑-->
<div id="menuForm" style="width: 460px; overflow: hidden; display: none;">
    <form class="form-horizontal m-t" id="menuFormTable" method="post">
        <div class="form-group">
            <label class="col-sm-3 control-label">菜单名称<span class="glyphicon glyphicon-asterisk requiredtitle"></span>：</label>
            <div class="col-sm-7">
                <input id="folder_name" name="folder_name" type="text" class="form-control input-sm" placeholder="请输入菜单名称" title="请输入菜单名称" required="" aria-required="true"/>
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-3 control-label">类型<span class="glyphicon glyphicon-asterisk requiredtitle"></span>：</label>
            <div class="col-sm-7">
                <select id="folder_type" name="folder_type" title="请选择类型" class="form-control show-tick selectpicker" placeholder="请选择类型">
                    <option value="page" selected>当前页面</option>
                    <option value="childPage">子页面</option>
                </select>
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-3 control-label">所属模块<span class="glyphicon glyphicon-asterisk requiredtitle"></span>：</label>
            <div class="col-sm-7">
                <select id=sm_code title="请选择所属模块" name="sm_code" class="selectpicker show-tick bs-select-hidden" data-live-search="false" required="" aria-required="true" placeholder="请选择所属模块"></select>
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-3 control-label">访问地址：</label>
            <div class="col-sm-7">
                <input id="folder_url" name="folder_url" type="text" class="form-control input-sm" placeholder="请输入访问地址" title="请输入访问地址" /><span class="help-block m-b-none"><i class="fa fa-info-circle"></i> 访问地址格式：Controller/Action</span>
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-3 control-label">菜单图标：</label>
            <div class="col-sm-7">
                <input type="hidden" id="folder_image" value="fa-adjust" name="folder_image"/>
                <a href="#"><i id="iconSelect" class="fa fa-adjust"></i></a>
                <button id="btnSetIcon" type="button" class="btn btn-outline btn-danger">
                    <i class="glyphicon glyphicon-trash" aria-hidden="true">设置图标</i>
                </button>
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-3 control-label">流程业务：</label>
            <div class="col-sm-7">
                <div class="checkbox checkbox-success checkbox-inline">
                    <input type="checkbox" id="is_Bus_img" name="is_Bus_img" value="option1">
                    <label for="is_Bus_img"> 是/否属于流程业务</label>
                </div>
                <input type="hidden" id="is_Bus" name="is_Bus" value="" />
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-3 control-label">业务代码：</label>
            <div class="col-sm-7">
                <input id="Bus_Code" name="Bus_Code" type="text" class="form-control input-sm" placeholder="请输入业务代码" title="请输入业务代码" />
            </div>
        </div>
    </form>
</div>
@section footSection{
    <script src="~/Resources/mainFrame/js/plugins/gtreetable/jquery.treeTable.js"></script>
    <script src="~/Resources/myScript/SysAdmin/menuManager.js"></script>

    <script>
        $(function () {
            menuManager.initSelect();
            menuManager.bindEvent();
            menuManager.initTreeTable();
            menuManager.bandEvent();
        });
    </script>
}
