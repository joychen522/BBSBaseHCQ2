@{
    ViewBag.Title = "违法犯罪记录--档案袋";
}
<div class="wrapper animated fadeInRight autoHeight">
    <div class="row autoHeight">
        <div class="col-sm-12 col-sm-leftRight">
            <div class="example">
                <div class="btn-group hidden-xs" id="exampleToolbar" role="group">
                    @{
                        List<string> folderList = (List<string>)ViewBag.elementList;
                        if (folderList.Contains("criminalAdd"))
                        {
                            <button id="criminalAdd" type="button" class="btn btn-outline btn-primary">
                                <i class="glyphicon glyphicon-plus" aria-hidden="true">添加</i>
                            </button>
                        }
                        if (folderList.Contains("criminalEdit"))
                        {
                            <button id="criminalEdit" type="button" class="btn btn-outline btn-primary">
                                <i class="glyphicon glyphicon-pencil" aria-hidden="true">编辑</i>
                            </button>
                        }
                        if (folderList.Contains("criminalDel"))
                        {
                            <button id="criminalDel" type="button" class="btn btn-outline btn-danger">
                                <i class="glyphicon glyphicon-trash" aria-hidden="true">删除</i>
                            </button>
                        }
                    }
                </div>
                <table class="table table-striped table-condensed table-hover" data-filter-control="true" id="exampleTableToolbar"></table>
            </div>
        </div>
    </div>
</div>
<!-- 添加/编辑 -->
<div id="orgform" style="width: 530px; overflow: hidden; display: none;">
    <form class="form-horizontal m-t" id="orgFormTable" method="post">
        <div class="form-group">
            <label class="col-sm-4 control-label">开始吸毒日期<span class="glyphicon glyphicon-asterisk requiredtitle"></span>：</label>
            <div class="col-sm-8">
                <input id="start_drug_date" name="start_drug_date" type="text" class="laydate-icon form-control input-sm" placeholder="请输入开始吸毒日期" title="请输入开始吸毒日期" onclick="laydate({istime: true, format: 'YYYY-MM-DD'})" required="" aria-required="true"/>
                <input type="hidden" id="cr_id" name="cr_id" value="" />
                <input type="hidden" id="user_identify" name="user_identify" value="" />
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-4 control-label">吸毒史(年)：</label>
            <div class="col-sm-8">
                <input id="drug_year" name="drug_year" type="text" class="form-control input-sm" placeholder="请输入吸毒史(年)" title="请输入吸毒史(年)" />
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-4 control-label">强制戒毒次数：</label>
            <div class="col-sm-8">
                <input id="force_time" name="force_time" type="text" class="form-control input-sm" placeholder="请输入强制戒毒次数" title="请输入强制戒毒次数" />
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-4 control-label">强制隔离次数：</label>
            <div class="col-sm-8">
                <input id="force_insulate" name="force_insulate" type="text" class="form-control input-sm" placeholder="请输入强制隔离次数" title="请输入强制隔离次数数" />
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-4 control-label">其他违法犯罪记录：</label>
            <div class="col-sm-8">
                <textarea class="form-control" id="other_record" name="other_record" rows="3" style="width:100%;" placeholder="请输入其他违法犯罪记录" title="请输入其他违法犯罪记录"></textarea>
            </div>
        </div>
    </form>
</div>
@section footSection{
    <script src="~/Resources/myScript/BaneUser/bagBaneManager.js"></script>
    <script>
            $(function () {
                //初始化Page
                criminalMannager.initPage();
            });
    </script>
}

