@{
    ViewBag.Title = "工资发放";
}
@section headerSection{
<style>
    .float-unit {
        height: 100%;
        border: 1px solid #E7EAEC;
        border-top-width: 0px;
        border-bottom-width: 0px;
        margin-bottom: 0px;
    }

    .left-sm-3 {
        padding-left: 0px;
    }

    .right-sm-9 {
        padding-right: 0px;
    }

    .ibox-unit {
        overflow-y: auto;
        height: 89%;
        padding: 0px;
    }

    #exampleToolbar div {
        margin-bottom: 0px;
    }

    #exampleToolbar > .form-group {
        float: left;
        margin: 0;
        margin-right: 5px;
        margin-top: 1px;
    }

    .form-group > button {
        margin-top: -2px;
        margin-bottom: 2px;
    }
</style>
}
<div class="wrapper animated fadeInRight autoHeight">
    <div class="row autoHeight" style="background-color: #fff;">
        <!--选择单位-->
        <div id="tree"></div>
        <!--生成图表-->
        <div class="col-sm-10 right-sm-9" style="padding-left: 5px;">
            <div class="example">
                <div class="btn-group hidden-xs" id="exampleToolbar" role="group">
                    @{
                        List<string> folderList = (List<string>) ViewBag.elementList;
                        if (folderList.Contains("financeEdit"))
                        {
                            <button id="financeEdit" type="button" class="btn btn-outline btn-primary">
                                <i class="glyphicon glyphicon-pencil" aria-hidden="true">编辑</i>
                            </button>
                        }
                        if (folderList.Contains("financeDel"))
                        {
                            <button id="financeDel" type="button" class="btn btn-outline btn-danger">
                                <i class="glyphicon glyphicon-trash" aria-hidden="true">撤销</i>
                            </button>
                        }
                        <div class="form-group" style="width: 130px;">
                            <input id="userName" name="userName" type="text" class="form-control" placeholder="发放原因关键字">
                        </div>
                        <div class="form-group" style="width: 120px; margin-top: -1px;">
                            <select id="CodeItem" name="CodeItem" title="请选择归档标示" class="form-control selectpicker" placeholder="请选择归档标示"></select>
                        </div>
                        <div class="form-group" style="width: 120px;">
                            <input id="dateStart" name="dateStart" type="text" class="form-control laydate-icon" placeholder="发放开始时间">
                        </div>
                        <div class="form-group" style="width: 120px;">
                            <input id="dateEnd" name="dateEnd" type="text" class="form-control laydate-icon" placeholder="发放截止时间">
                        </div>
                        <div class="form-group">
                            <button id="btnSearch" class="btn btn-primary" type="button"><i class="fa fa-search"></i>&nbsp;查询</button>
                        </div>
                    }
                </div>
                <table id="financeTableToolbar" data-mobile-responsive="true" data-radio="true"></table>
            </div>
        </div>
    </div>
</div>
<!-- 添加/编辑 -->
<div id="group_form" style="width: 460px; overflow: hidden; display: none;">
    <form class="form-horizontal m-t" id="groupFormTable" method="post">
        <div class="form-group">
            <label class="col-sm-4 control-label">用工单位<span class="glyphicon glyphicon-asterisk requiredtitle"></span>：</label>
            <div class="col-sm-7">
                <input id="unitinfo" name="unitinfo" readonly="true" type="text" class="form-control input-sm" required="" aria-required="true"/>
                <input type="hidden" id="UnitID" name="UnitID" />
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-4 control-label">归档标示<span class="glyphicon glyphicon-asterisk requiredtitle"></span>：</label>
            <div class="col-sm-7">
                <select id="WGJG0101" name="WGJG0101" title="请选择归档标示" class="form-control input-sm selectpicker" required="" aria-required="true" placeholder="请选择归档标示" style="padding: 5px 10px;"></select>
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-4 control-label">约定发薪日期<span class="glyphicon glyphicon-asterisk requiredtitle"></span>：</label>
            <div class="col-sm-7">
                <input id="WGJG0107" name="WGJG0107" type="text" class="laydate-icon form-control input-sm" placeholder="请输入约定发薪日期" title="请输入约定发薪日期" onclick="laydate({istime: true, format: 'YYYY-MM-DD'})" required="" aria-required="true"/>
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-4 control-label">发放原因：</label>
            <div class="col-sm-7">
                <input id="WGJG0103" name="WGJG0103" type="text" class="form-control input-sm" placeholder="请输入发放原因" title="请输入发放原因" />
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-4 control-label">备注：</label>
            <div class="col-sm-7">
                <textarea class="form-control" id="WGJG0104" name="WGJG0104" rows="3" placeholder="请输入备注信息" title="请输入备注信息" ></textarea>
            </div>
        </div>
    </form>
</div>
@section footSection{
    <script src="~/Resources/mainFrame/js/plugins/treeview/bootstrap-treeview-1.2.0.js"></script>
    <script src="~/Resources/tools/treeview-search-custom.js"></script>
    <script src="~/Resources/myScript/finance/financeManager.js"></script>
    <script>
        $(function() {
            //初始化页面
            financeManager.initPage();
        });
    </script>
}

