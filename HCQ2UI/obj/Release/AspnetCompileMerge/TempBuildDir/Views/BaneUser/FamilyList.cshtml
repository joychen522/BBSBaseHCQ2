@{
    ViewBag.Title = "家庭成员--档案袋";
}
<div class="wrapper animated fadeInRight autoHeight">
    <div class="row autoHeight">
        <div class="col-sm-12 col-sm-leftRight">
            <div class="example">
                <div class="btn-group hidden-xs" id="exampleToolbar" role="group">
                    @{
                        List<string> folderList = (List<string>)ViewBag.elementList;
                        if (folderList.Contains("familyAdd"))
                        {
                            <button id="familyAdd" type="button" class="btn btn-outline btn-primary">
                                <i class="glyphicon glyphicon-plus" aria-hidden="true">添加</i>
                            </button>
                        }
                        if (folderList.Contains("familyEdit"))
                        {
                            <button id="familyEdit" type="button" class="btn btn-outline btn-primary">
                                <i class="glyphicon glyphicon-pencil" aria-hidden="true">编辑</i>
                            </button>
                        }
                        if (folderList.Contains("familyDel"))
                        {
                            <button id="familyDel" type="button" class="btn btn-outline btn-danger">
                                <i class="glyphicon glyphicon-trash" aria-hidden="true">删除</i>
                            </button>
                        }
                    }
                </div>
                <table class="table table-striped table-condensed table-hover" data-filter-control="true" id="exampleTableToolbar"></table>
            </div>
        </div>
    </div>
</div>
<!-- 添加/编辑 -->
<div id="orgform" style="width: 620px; overflow: hidden; display: none;">
    <form class="form-horizontal m-t" id="orgFormTable" method="post">
        <div class="form-group">
            <label class="col-sm-4 control-label">姓名<span class="glyphicon glyphicon-asterisk requiredtitle"></span>：</label>
            <div class="col-sm-8">
                <input id="fr_name" name="fr_name" type="text" class="form-control input-sm" placeholder="请输入姓名" title="请输入姓名" required="" aria-required="true" />
                <input type="hidden" id="fr_id" name="fr_id" value="" />
                <input type="hidden" id="user_identify" name="user_identify" value="" />
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-4 control-label">性别：</label>
            <div class="col-sm-8">
                <select id="fr_sex" name="fr_sex" title="请选择性别" class="form-control show-tick selectpicker" placeholder="请选择性别">
                    <option value="男" selected>男</option>
                    <option value="女">女</option>
                </select>
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-4 control-label">出生日期：</label>
            <div class="col-sm-8">
                <input id="fr_birth" name="fr_birth" type="text" class="laydate-icon form-control input-sm" placeholder="请输入出生日期" title="请输入出生日期" onclick="laydate({istime: true, format: 'YYYY-MM-DD'})" />
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-4 control-label">学历：</label>
            <div class="col-sm-8">
                <select id="fr_edu" name="fr_edu" title="请选择学历" class="form-control show-tick selectpicker" placeholder="请选择学历"></select>
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-4 control-label">家庭住址：</label>
            <div class="col-sm-8">
                <input id="fr_family_url" name="fr_family_url" type="text" class="form-control input-sm" placeholder="请输入家庭住址" title="请输入家庭住址" />
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-4 control-label">职业：</label>
            <div class="col-sm-8">
                <input id="fr_job" name="fr_job" type="text" class="form-control input-sm" placeholder="请输入职业" title="请输入职业" />
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-4 control-label">工作单位：</label>
            <div class="col-sm-8">
                <input id="fr_unit" name="fr_unit" type="text" class="form-control input-sm" placeholder="请输入工作单位" title="请输入工作单位" />
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-4 control-label">相互关系：</label>
            <div class="col-sm-8">
                <input id="fr_relation" name="fr_relation" type="text" class="form-control input-sm" placeholder="请输入相互关系" title="请输入相互关系" />
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-4 control-label">联系电话：</label>
            <div class="col-sm-8">
                <input id="fr_phone" name="fr_phone" type="text" class="form-control input-sm" placeholder="请输入联系电话" title="请输入联系电话" />
                <input type="hidden" id="fr_type" name="fr_type" value="" />
            </div>
        </div>
    </form>
</div>
@section footSection{
    <script src="~/Resources/myScript/BaneUser/bagBaneManager.js"></script>
    <script>
            $(function () {
                //初始化Page
                familyMannager.initPage();
            });
    </script>
}

